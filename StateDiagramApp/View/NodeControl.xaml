<UserControl x:Class="StateDiagramApp.View.NodeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StateDiagramApp.View"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="20">
    <Canvas >
        <Rectangle  Width="20" Height="20" Stroke="{Binding SelectMark}" StrokeThickness="2"  >
        </Rectangle>
        <Rectangle Canvas.Left="1" Canvas.Top="1" Width="18" Height="18" Stroke="Black" StrokeThickness="2" Fill="White" >
        </Rectangle>
    </Canvas>
</UserControl>
